<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.brands.BrandsController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <TextField fx:id="searchField" promptText="Search" style="-fx-pref-width: 300px;"/>
    <ListView fx:id="brandsListView" VBox.vgrow="ALWAYS" style="-fx-pref-width: 300px; -fx-pref-height: 400px;"/>
    <HBox spacing="10">
        <Button text="Add Brand" onAction="#switchToAddBrand" style="-fx-background-color: #5cb85c; -fx-text-fill: white;"/>
        <Button text="Edit Brand" onAction="#switchToEditBrand" style="-fx-background-color: #0275d8; -fx-text-fill: white;"/>
        <Button text="View Brand" onAction="#switchToViewBrand" style="-fx-background-color: #f0ad4e; -fx-text-fill: white;"/>
    </HBox>
</VBox>
