<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.store_inventory.AddStoreInventoryController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <ComboBox fx:id="productIdComboBox" promptText="Product ID" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" editable="true"/>
        <TextField fx:id="quantityField" promptText="Quantity" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    </GridPane>
    <Button text="Add Store Inventory" onAction="#handleAddStoreInventory" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
