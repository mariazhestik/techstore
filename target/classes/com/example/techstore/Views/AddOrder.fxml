<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.orders.AddOrderController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <TextField fx:id="customerIdField" promptText="Customer ID" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="employeeIdField" promptText="Employee ID" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="productIdField" promptText="Product ID" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="dateField" promptText="Date" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="totalAmountField" promptText="Total Amount" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="statusField" promptText="Status" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    </GridPane>
    <Button text="Add Order" onAction="#handleAddOrder" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
