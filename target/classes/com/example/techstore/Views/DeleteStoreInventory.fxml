<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.store_inventory.DeleteStoreInventoryController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Label text="Are you sure you want to delete this store inventory?" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <Label text="Product ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="productIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>
    <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteStoreInventory" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
    <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f0f0f0; -fx-text-fill: black;"/>
</VBox>
