<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.products.DeleteProductController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Are you sure you want to delete the following product?" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label fx:id="nameLabel" style="-fx-font-size: 14px; -fx-text-fill: #ff0000;"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteProduct" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #d3d3d3; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
