<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.products.ViewProductController" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Brand ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="brandIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="priceLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Processor:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="processorLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Memory:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="memoryLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="RAM:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="ramLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Screen Type:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="screenTypeLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Material of Corps:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="materialOfCorpsLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Colour:" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="colourLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Dimension:" GridPane.rowIndex="9" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="dimensionLabel" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label text="Battery:" GridPane.rowIndex="10" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="batteryLabel" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Label text="Status:" GridPane.rowIndex="11" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
    <Label fx:id="statusLabel" GridPane.rowIndex="11" GridPane.columnIndex="1"/>
</GridPane>
