<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.products.AddProductController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <TextField fx:id="nameField" promptText="Name" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="brandIdField" promptText="Brand ID" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="priceField" promptText="Price" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="processorField" promptText="Processor" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="memoryField" promptText="Memory" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="ramField" promptText="RAM" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="screenTypeField" promptText="Screen Type" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="materialOfCorpsField" promptText="Material of Corps" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="colourField" promptText="Colour" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="dimensionField" promptText="Dimension" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="batteryField" promptText="Battery" GridPane.rowIndex="10" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <TextField fx:id="statusField" promptText="Status" GridPane.rowIndex="11" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    </GridPane>
    <Button text="Add Product" onAction="#handleAddProduct" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
