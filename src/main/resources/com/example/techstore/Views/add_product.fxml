<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.techstore.Controllers.Admin.products.AddProductController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="brandIdField" promptText="Brand ID"/>
    <TextField fx:id="priceField" promptText="Price"/>
    <TextField fx:id="processorField" promptText="Processor"/>
    <TextField fx:id="memoryField" promptText="Memory"/>
    <TextField fx:id="ramField" promptText="RAM"/>
    <TextField fx:id="screenTypeField" promptText="Screen Type"/>
    <TextField fx:id="materialOfCorpsField" promptText="Material of Corps"/>
    <TextField fx:id="colourField" promptText="Colour"/>
    <TextField fx:id="dimensionField" promptText="Dimension"/>
    <TextField fx:id="batteryField" promptText="Battery"/>
    <TextField fx:id="statusField" promptText="Status"/>
    <Button text="Add Product" onAction="#handleAddProduct"/>
</VBox>
